<div class="jumbotron">
  <div class="dimmer">
 <div class="banner text-center">
   <div class="text-center">
     <h1 class="proposition">Explorez la Fance</h1>
     <h2 class="baseline">Choisissez vos lieux de vacances selon vos critères</h2>
   </div>
 </div>
 </div>
</div>
<div class="container">
<div class="row">
  <div class="col-md-4">
    <h2>Filtres</h2>
    <ul>
      <li>
          <%= link_to "covid", covid_path %>
      </li>
      <li>
          <%= link_to "Air", air_path %>
      </li>
      <li>
          <%= link_to "Sécurité", securite_path %>
      </li>
      <li>
          <%= link_to "Restauration", restauration_path %>
      </li>
      <li>
          <%= link_to "Météo", meteo_path %>
      </li>
      <li>
          <%= link_to "Fun", fun_path %>
      </li>
    </ul>

  </div>
  <div class="col-md-8">
  <div class="text-center">
    <h1>Villes</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Region</th>
          <th>Place</th>
          <th>Air</th>
          <th>Security</th>
          <th>Food</th>
          <th>Weather</th>
          <th>Moving</th>
          <th>Covid</th>
          <th>Fun</th>
          <th>Score</th>
        </tr>
      </thead>

      <tbody>
        <% @cities.each do |city| %>
          <tr>
            <td><%= city.name %></td>
            <td><%= city.region %></td>
            <td><%= city.place %></td>
            <td><%= city.air %></td>
            <td><%= city.security %></td>
            <td><%= city.food %></td>
            <td><%= city.weather %></td>
            <td><%= city.moving %></td>
            <td><%= city.covid %></td>
            <td><%= city.fun %></td>
            <td><%= city.score = city.covid.to_i + city.food.to_i + city.air.to_i + city.security.to_i + city.weather.to_i + city.moving.to_i + city.fun.to_i %></td>
            <td><%= link_to 'Voir', city %></td>
            <!--<td><%= link_to 'Edit', edit_city_path(city) %></td>
            <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
 </div>
</div>
