<div class="container">
<div class="row">
  <div class="col-md-2">
    <h2>Filtres</h2>
    <ul>
      <li>
          <%= link_to "covid", covid_path %>
      </li>
      <li>
          <%= link_to "Air", air_path %>
      </li>
      <li>
          <%= link_to "Sécurité", securite_path %>
      </li>
      <li>
          <%= link_to "Restauration", restauration_path %>
      </li>
      <li>
          <%= link_to "Météo", meteo_path %>
      </li>
      <li>
          <%= link_to "Fun", fun_path %>
      </li>
    </ul>

  </div>
  <div class="col-md-10">
    <div class="text-center">
      <h2>Villes</h2>
    </div>
    <div class="row">
      <%= hidden_field_tag i = 0 %>

                <!-- Team member -->
                <% @cities.each do |city| %>

                  <%= i = i + 1 %>

                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                        <div class="mainflip">
                            <div class="frontside">
                                <div class="card"><%= image_tag(city.image, class:"img-responsive") %>


                                    <div class="card-body text-center">
                                        <h4 class="card-title"><%= city.name %></h4>
                                        <p class="card-text">Region : <%= city.region %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="backside">
                                <div class="card">
                                    <div class="card-body text-center mt-4">
                                      <h5 class="book_title">Restauration : <%= city.food %></h5>
                                      <h5 class="book_title">Qualité de l'air : <%= city.air %></h5>
                                      <h5 class="book_title">Météo : <%= city.weather %></h5>
                                      <h5 class="book_title">Transport : <%= city.moving %></h5>
                                      <h5 class="book_title">Covid : <%= city.covid %></h5>
                                      <h5 class="book_title">Fun : <%= city.fun %></h5>
                                      <h5 class="book_title">Sécurité :   <%= city.security %><%= puts i %></h5>
                                      <h5 class="book_title">classement : <%= city.classement.to_i %></h5>

                                        <p class="card-text">
                                          This is basic card with image on top, title, descriptio title, description</p>
                                          <%= button_to "voir plus", city ,:method => :post, class:"btn btn-primary btn-sm"   %>
                                          <%=  i.to_i %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>
    </div>


