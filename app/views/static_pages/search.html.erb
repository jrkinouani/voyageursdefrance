<div class="container">
    <div class="row">
      <div class="text-center">
        <h3 class="title_reunion">
          <% if @cities.blank? %>
            <h3 class="no_city">Désolé il n'y pas de livre ou d'auteur avec ce mot "<%= params[:search] %>"</br> </h3>
            <i class="fa fa-book" aria-hidden="true" ></i>

            <% else %>
              <h3 class="title_reunion">Voici le résultat pour <%= params[:search] %></h3>

          <% end %>
            <h1>Cities</h1>
            <table>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Region</th>
                  <th>Place</th>
                  <th>Air</th>
                  <th>Security</th>
                  <th>Food</th>
                  <th>Weather</th>
                  <th>Moving</th>
                  <th>Covid</th>
                  <th>Score</th>
                </tr>
              </thead>

              <tbody>

                <% @cities.each do |city| %>
                  <tr>
                    <td><%= city.name %></td>
                    <td><%= city.region %></td>
                    <td><%= city.place %></td>
                    <td><%= city.air %></td>
                    <td><%= city.security %></td>
                    <td><%= city.food %></td>
                    <td><%= city.weather %></td>
                    <td><%= city.moving %></td>
                    <td><%= city.covid %></td>
                    <td><%= city.score = city.covid.to_i + city.food.to_i + city.air.to_i + city.security.to_i + city.weather.to_i + city.moving.to_i + city.fun.to_i%></td>

                    <!--<td><%= link_to 'Show', city %></td>
                    <td><%= link_to 'Edit', edit_city_path(city) %></td>
                    <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
    </div>
  </div>
